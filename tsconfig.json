{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*", "src/node_modules/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "static/*"],
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "lib": ["ES2020", "dom"],
    "paths": {
      "@components/*": ["./src/components/*"],
      "@models/*": ["./src/models/*"],
      "@pages/*": ["./src/pages/*"],
      "@stores/*": ["./src/stores/*"],
      "@utils/*": ["./src/utils/*"]
    }
  }
}
